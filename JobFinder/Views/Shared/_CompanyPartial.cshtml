@model CompanyServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6>Industry: <b>@Model.Industry</b></h6>
            <br />
            <a asp-controller="Company" asp-action="Details" asp-route-id="@Model.Id" asp-route-information="@Model.GetInformation()" class="btn btn-success">Details</a>
        </div>
    </div>
</div>