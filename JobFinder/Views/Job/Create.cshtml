@model JobCreateFormModel
@{
    ViewBag.Title = "Create Job Offer";
}

<h1 class="text-center">@ViewBag.Title</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Title">Title</label>
                <input class="form-control " autocomplete="off" aria-required="true" placeholder="Title..." asp-for="@Model.Title" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Description">Description</label>
                <textarea class="form-control " autocomplete="off" aria-required="true" placeholder="Description..." asp-for="@Model.Description"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Requirements">Requirements</label>
                <textarea class="form-control " autocomplete="off aria-required="true" placeholder="Requirements..." asp-for="@Model.Requirements"></textarea>
                <span asp-validation-for="@Model.Requirements" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Responsibilities">Responsibilities</label>
                <textarea class="form-control " autocomplete="off" aria-required="false" placeholder="Responsibilities..." asp-for="@Model.Responsibilities"></textarea>
                <span asp-validation-for="@Model.Responsibilities" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Benefits">Benefits</label>
                <textarea class="form-control " autocomplete="off" aria-required="false" placeholder="Benefits..." asp-for="@Model.Benefits"></textarea>
                <span asp-validation-for="@Model.Benefits" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.MinSalary">Minimum Salary in BGN</label>
                <input class="form-control " autocomplete="off" aria-required="true" asp-for="@Model.MinSalary" />
                <span asp-validation-for="@Model.MinSalary" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.MaxSalary">Maximum Salary in BGN</label>
                <input class="form-control " autocomplete="off" aria-required="true" asp-for="@Model.MaxSalary" />
                <span asp-validation-for="@Model.MaxSalary" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.CategoryId">Category</label>
                <select asp-for="@Model.CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.EmploymentTypeId">Employment Type</label>
                <select asp-for="@Model.EmploymentTypeId" class="form-control">
                    @foreach (var employmentType in Model.EmploymentTypes)
                    {
                        <option value="@employmentType.Id">@employmentType.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.EmploymentTypeId" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}