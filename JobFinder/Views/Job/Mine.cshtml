@model IEnumerable<JobServiceModel>

@{
    ViewBag.Title = "My Jobs";
}

<h2 class="text-center">@ViewBag.Title</h2>

@if (Model.Count() == 0)
{
    <h4 class="text-center">You don't have any job offers yet!</h4>
    <form class="text-center" asp-controller="Job" asp-action="Create" method="get">
        <button class="btn btn-success" type="submit" role="button">Create</button>
    </form>
}
else
{
    <div class="row">
        @foreach (var job in Model)
        {
            <partial name="_JobPartial" model="@job" />
        }
    </div>
}
