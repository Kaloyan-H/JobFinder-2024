@model ApplicationCreateFormModel

@{
    ViewBag.Title = $"Apply for {Model.JobTitle} at {Model.CompanyName}";
}

<h1 class="text-center">@ViewBag.Title</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.CoverLetter"></label>
                <textarea class="form-control " autocomplete="off" aria-required="true" asp-for="@Model.CoverLetter"></textarea>
                <span asp-validation-for="@Model.CoverLetter" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ResumeURL"></label>
                <input class="form-control " autocomplete="off" aria-required="true" asp-for="@Model.ResumeURL" />
                <span asp-validation-for="@Model.ResumeURL" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Apply</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
